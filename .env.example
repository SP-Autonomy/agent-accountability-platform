# AIAAP Environment Variables — copy to .env and customize

# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://aiaap:aiaap@postgres:5432/aiaap

# ── Service ports (used by docker-compose) ────────────────────────────────────
INGEST_PORT=8100
DETECTIONS_PORT=8200
IDENTITY_PORT=8300
DASHBOARD_PORT=8501

# ── Inter-service URLs (used by dashboard and detections) ─────────────────────
INGEST_URL=http://localhost:8100
DETECTIONS_URL=http://localhost:8200
IDENTITY_URL=http://localhost:8300

# ── Multi-tenancy ─────────────────────────────────────────────────────────────
TENANT_ID=default

# ── Correlation engine ────────────────────────────────────────────────────────
CORRELATION_INTERVAL_SECONDS=10

# ── OTel SDK (set on instrumented workloads) ──────────────────────────────────
OTEL_SERVICE_NAME=aiaap-orchestrator
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ── Agent identity (set on workload pods) ─────────────────────────────────────
AGENT_ID=orchestrator-01
AGENT_ROLE=orchestrator
NAMESPACE=ai-app
SERVICE_ACCOUNT=orchestrator

# ── Kubernetes context (for scenario runner) ──────────────────────────────────
KUBECTL_CONTEXT=kind-aiaap

# ── Helm / in-cluster settings ────────────────────────────────────────────────
HELM_NAMESPACE=aiaap-system
AIAAP_INGEST_URL=http://aiaap-ingest.aiaap-system.svc.cluster.local:8100
